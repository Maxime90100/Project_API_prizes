<div style="text-align: center">
    <h1>Update laureate</h1>
</div>
<form method="post" action="/laureate/update" style="width: 50%; margin-left: 25%">
    <div class="form-group">
        <label for="year">Year</label>
        <select class="form-select" id="year" name="year" required>
            {{#each years}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-select" id="category" name="category" required>
            {{#each categories}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="id">Id</label>
        <input type="text" class="form-control" id="id" name="id" placeholder="Enter id" required>
    </div>
    <div class="form-group">
        <label for="motivation">Motivation</label>
        <input type="text" class="form-control" id="motivation" name="motivation" placeholder="Enter new motivation" required>
    </div>
    <br>
    <button type="submit" class="btn btn-dark" style="width:30%;margin-left: 35%;">Submit</button>
</form>